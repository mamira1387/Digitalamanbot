# از یک ایمیج پایه PHP استفاده کنید
FROM php:8.2-cli

# دایرکتوری کاری رو تنظیم کنید
WORKDIR /app

# فایل bot رو به داخل کانتینر کپی کنید
COPY bot /app/bot

# مطمئن بشید فایل قابل اجراست (اختیاری، اما توصیه شده)
RUN chmod +x /app/bot

# دستور نهایی برای اجرای فایل bot
# این خط مشخص میکنه وقتی کانتینر اجرا میشه، چه دستوری اجرا بشه
CMD ["php", "/app/bot"]
